<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="no.ntnu.tdt4250.Games">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse/modeling-2024-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../MatrixEngineProject"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="no.ntnu.tdt4250.Games.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/no.ntnu.tdt4250.Games/bin"/>
    </path>

    <path id="no.ntnu.tdt4250.Games.classpath">
        <path refid="no.ntnu.tdt4250.Games.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="no.ntnu.tdt4250.Games.libraryclasspath.alljars">
        <pathelement location="../no.ntnu.tdt4250.Games/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="no.ntnu.tdt4250.Games.classpath.alljars">
        <path refid="no.ntnu.tdt4250.Games.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="no.ntnu.tdt4250.Games.main.Generate" classpathref="no.ntnu.tdt4250.Games.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="no.ntnu.tdt4250.Games.main.Generate" classpathref="no.ntnu.tdt4250.Games.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
